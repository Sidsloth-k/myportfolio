# Server
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# API Gateway
API_GATEWAY_HEADER=apikey
API_GATEWAY_KEY=

# Supabase (app client)
SUPABASE_URL=
SUPABASE_KEY=
# Database (use IPv4 Transaction Pooler to avoid DNS/IPv6 issues)
SUPABASE_DB_URL=
# Or direct (if your network supports it):
# SUPABASE_DB_URL=
PGSSL=true
PG_POOL_MAX=10
PG_IDLE_TIMEOUT_MS=30000

# JWT
JWT_SECRET=change_me
JWT_EXPIRES_IN=24h

# Uploads
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100