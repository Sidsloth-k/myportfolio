{
  "version": 2,
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index?path=$1" },
    { "source": "/", "destination": "/api/index?path=" }
  ],
  "env": {
    "NODE_ENV": "production",
    "API_BASE_PATH": ""
  }
}
